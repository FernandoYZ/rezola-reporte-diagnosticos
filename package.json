{
  "name": "reporte-diagnosticos",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/main.js",
    "start": "node src/main.js",
    "css:dev": "tailwindcss -i ./assets/css/main.css -o ./public/dist/styles.css --watch",
    "css:build": "tailwindcss -i ./assets/css/main.css -o ./public/dist/styles.css --minify",
    "js:dev": "esbuild assets/js/main.js --bundle --outfile=public/dist/bundle.js --sourcemap --watch",
    "js:apex": "curl -L https://cdn.jsdelivr.net/npm/apexcharts/dist/apexcharts.min.js -o public/dist/apex.min.js",
    "js:alpine": "curl -L https://cdn.jsdelivr.net/npm/alpinejs@3.15.4/dist/cdn.min.js -o public/dist/alpine.min.js",
    "js:htmx": "curl -L https://cdnjs.cloudflare.com/ajax/libs/htmx/2.0.7/htmx.min.js -o public/dist/htmx.min.js",
    "js:build": "esbuild assets/js/main.js --bundle --minify --outfile=public/dist/bundle.js && pnpm js:apex && pnpm js:alpine && pnpm js:htmx"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@tailwindcss/cli": "^4.1.18",
    "eta": "^4.5.0",
    "exceljs": "^4.4.0",
    "figlet": "^1.9.4",
    "hono": "^4.11.3",
    "mssql": "^12.2.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "esbuild": "^0.27.2"
  }
}